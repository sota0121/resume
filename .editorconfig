# General
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.go]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makfile]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.toml]
indent_style = space
indent_size = 2
